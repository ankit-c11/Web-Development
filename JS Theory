////Sample JS Programme: Todo List (Adding things to array then printing it)

var input=prompt("What would you like to do?");
var todo=[];


while(input!="quit"){

	if(input=="new"){
	var a=prompt("Enter a new todo");
	todo.push(a);
}
else if(input=="list"){
	console.log(todo);
}

input=prompt("What would you like to do?");
}
console.log("Okay, You quit the app");
     
