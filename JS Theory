////////////////A simple todo list which add items when we add it and it adds it in the array and delete the item.


var input=prompt("What would you like to do?");
var todo=[];

while(input!="quit"){
if(input=="new"){
	var a=prompt("What you want to Todo list");
	todo.push(a);
	console.log("Add a todo");
}

else if(input=="list"){
	console.log("*******");
	
	todo.forEach(function(z , index){
		console.log( index + " : " + z);
	}) 
	console.log("*******");
}

else if(input=="delete"){
	var i=prompt("Give index to delete");
	todo.splice(i,1);
	console.log("Delete a todo");

}

var input=prompt("What would you like to do?");

}

console.log("Okay! You quit the app. ");
