// the javascript file to be saved as "todo.js"
var todos = [];
do	{
		var action = prompt("What would you like to do?");
		if(action == "new")
		{	var newTodo = prompt("Enter a new todo");
			todos.push(newTodo);
			console.log(newTodo + " added to the todos.");
		}
		if(action == "list")
		{	
			console.log("************");
			todos.forEach(function(a){
				console.log(todos.indexOf(a) + ": " + a);
			})
			console.log("************");
		}
		if(action == "delete"){
			todos.splice(prompt("Enter the index of todo to delete"), 1);
			console.log("Todo removed");
		}
	}
while(action != "quit")

console.log("OK, YOU QUIT THE APP.");
